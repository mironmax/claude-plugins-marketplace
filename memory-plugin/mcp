#!/bin/bash
# User-friendly wrapper for Memory MCP Server management

PLUGIN_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
MANAGE_SCRIPT="${PLUGIN_DIR}/server/manage_server.sh"

if [ ! -f "${MANAGE_SCRIPT}" ]; then
    echo "Error: Server management script not found at ${MANAGE_SCRIPT}"
    exit 1
fi

exec bash "${MANAGE_SCRIPT}" "$@"
